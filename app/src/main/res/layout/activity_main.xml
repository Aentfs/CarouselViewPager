<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.mrwii.carousel.carouselviewpager.MainActivity">

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="@dimen/activity_header_size" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_slider1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/slider_left_margin"
        android:paddingRight="12dp"
        android:background="@drawable/border"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_slider2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/slider_left_margin"
        android:paddingRight="12dp"
        android:layout_weight="1"
        android:background="@drawable/border" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_slider3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="@dimen/slider_left_margin"
        android:paddingRight="12dp"
        android:layout_weight="1"
        android:background="@drawable/border" />
</LinearLayout>
